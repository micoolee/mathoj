/**app.wxss**/
/* 水平排列 */
.splist {
  display: flex;
  flex-direction: row;
}

/* 垂直排列 */
.czlist {
  display: flex;
  flex-direction: column;
}

/* 灰字 */
.text1 {
  font-size: 10px;
  color: gray;
}

.spcenter {
  display: flex;
  justify-content: center;

}


/* 首页提问 */
.tiwenbutton {
  position: fixed;
  bottom: 10px;
  right: auto;
  left: auto;
  width: 70px;
  height: 70px;
  background-color: black;
  color: white;
  font-size: 13px;
  text-align: center;
  border-radius: 50%;
}

.spleft {
  display: flex;
  margin-right: auto;
  padding: 10px;
  font-size: 15px;
  justify-content: space-around;
  width: 50%;
}












.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  /* background: #F0F4F3; */
}



.flex-wrp {
  display: flex;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.toptab.active {
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}

.container {
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.container .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 0rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .feed-item .feed-source {
  width: 690rpx;
  left: 0;
  height: 50rpx;
}

.container .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
}

.container .feed-item .feed-source a {
  display: inline-block;
  height: 40rpx;
}

.container .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feed-item .feed-source text {
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}

.container .feed-item .feed-source .item-more {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}

.container .feed-item .feed-content {
  padding: 10rpx 0 0 0;
}

.container .feed-item .feed-content .question text {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.container .feed-item .feed-content .answer-body {
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}

.container .feed-item .feed-content .answer-actions {
  width: 690rpx;
  padding: 10rpx 0 0;
  color: #a0acac;
}

.container .feed-item .feed-content .answer-actions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

.container .feed-item .feed-content .answer-actions .dot ::after {
  content: "•";
}


.line-reback {
  display: -webkit-box;
  /* -webkit-line-clamp: 3; */
  -webkit-box-orient: vertical;
  word-break: break-all;
  overflow: hidden;
}





/* 浮动 */
.extra {
  height: 40px;
  background: #FFF;
  border-top: 1px solid #F2F2F2;
  position: fixed;
  bottom: 0px;
  left: 0;
  right: 0px;
  width: 100%;
  box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.1);
}

.extra-input {
  width: 80%;
  height: 20px;
  margin: 10px;
  font-size: 13px;
  font-weight: 300;
  line-height: 20px;
  padding: 0 6px;
  border-left: 2px solid #48C23D;
  color: #444;
}

.extra-placeholder {
  font-size: 13px;
  font-weight: 300;
  color: #999;
}

/* 点赞 评论 分享 */
.extra-share {
  position: absolute;
  right: 5px;
  width: 30%;
}

.extra-share-img {
  width: 20px;
  height: 20px;
  float: right;
  padding: 10px 15px;
}

.comments-avatar-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #F2F2F2;
}

.page {
  background-color: #F8F8F8;
