  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 100%;
  /* height: 70%; */
  overflow: hidden;
  position: fixed;
  /* top: 30%;   */
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: 0 0 0 0;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  height: 100%;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}


