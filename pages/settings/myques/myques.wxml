


<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower"  scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
<view wx:if="{{problemlistnull==0}}" class="question-link line-3 centertext">没有提问记录
<button bindtap='toask'>去提问</button>
</view>
<view wx:else>

    <block wx:for="{{problemlist}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
        <view class="feed-item">
            <view class="feed-source">
                <a class="">
                    <text>{{item.asker}}{{item.feed_source_txt}}</text>
                </a>
            </view>
            <view class="feed-content">
                <view class="question line-reback" qid="{{question_id}}" data-id='{{item.problemid}}' bindtap="bindQueTap">
                    <a class="question-link">
                        <text>{{item.description}}</text>
                        <view wx:if="{{item.problempic != 'noimages'}}"><image src='{{item.problempic}}'></image></view>
                          
                    </a>
                </view>
                <view class="answer-body">
                    <view bindtap="bindItemTap">
                        <text class="answer-txt" aid="{{answer_id}}">{{item.fields.solver}}</text>
                    </view>
                    <view class="answer-actions" bindtap="bindItemTap">

                        <view class="comments dot">
                            <a>{{item.comment_num}} 评论 </a>
                        </view>
                        <view class="follow-it dot">
                            <a>关注</a>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
  </view>
</scroll-view>