<view style='margin-top:50rpx;'>
  <view class='line font15' style="display:flex">
    <view style="flex:1;">
      <text>姓名</text>
    </view>
    <view style="flex:3;">
      <input type="text" maxlength="255" placeholder="张三" bindinput='writerealname' placeholder-class="extra-placeholder" value='{{realname}}' />
    </view>
  </view>
  <view class='line font15' style="display:flex">
    <view style="flex:1;">
      <text>手机号</text>
    </view>
    <view style="flex:3">
      <input type="text" maxlength="255" placeholder="187xxxxxxxx" bindinput='writephone' placeholder-class="extra-placeholder" value='{{phone}}' />
    </view>
  </view>
  <view wx:if="{{role !='principal' && role != 'pre-principal'}}" class='line font15' style="display:flex">
    <view style="flex:1;">
      <text>我的年级</text>
    </view>
    <view style="flex:3">
      <picker value="{{id}}" bindchange='changegrade' range="{{grades}}">{{grades[id]}}</picker>
    </view>
  </view>
  <view class='line font15' style="display:flex">
    <view style="flex:1;">
      <text>自我简介</text>
    </view>
    <view style="flex:3">
      <input type="text" maxlength="255" placeholder="写自我简介" bindinput='writeselfdesc' placeholder-class="extra-placeholder" value='{{selfdesc}}' />
    </view>
  </view>
  <view class="spcenter" style='margin-top:50rpx;'>
    <button type="default" size="default" style="width:400rpx" bindtap='save'>保存</button>
    <!-- <text class="textcenter whitebackblueword" style='padding: 10px 0;' bindtap='save'>保存</text> -->
  </view>
</view>