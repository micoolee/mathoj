<view>
  <view class="czcenter" wx:for="{{applys}}" wx:for-item="item">
    <view class="czcenter" style="flex:5">
      <image class="bigavatar" src="{{item.applyeravatar}}" />
      <text>
        {{item.applyerrealname}}    {{applytypes[item.applytype]}} {{applytypes[item.applystate]}}
        <!-- {{item.applytime}} -->
      </text>
    </view>
    <view wx:if="{{item.applystate==undefined}}" class="pingjun" style="flex:2;font-size: 30rpx;">
      <button bindtap="passapply" data-applyid="{{item.applyid}}" class="solidborder" style="border-radius: 10px;padding: 10rpx;">
        通过
      </button>
      <button data-applyid="{{item.applyid}}" bindtap="rejectapply" class="solidborder" style="border-radius: 10px;padding: 10rpx;">
        拒绝
      </button>
    </view>
  </view>
</view>