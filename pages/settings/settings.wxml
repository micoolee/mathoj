<view>
  <view bindtap="bindViewTap" class="splist" style='padding-top:50rpx;padding-left:50rpx;background-color:#0066FF;height:250rpx;'>
    <view>
      <image class="userinfo-avatar" src="{{userInfo.avatar}}" background-size="cover"></image>
    </view>
    <view catchtap="showMyProf" class="czlist" style="margin-left:40rpx;">
      <view class="userinfo-nickname" style="color:white">
        <text>{{userInfo.nickname}}</text>
        <text style="margin-left:10px;font-size:12px;">{{role}}</text>
      </view>
      <text class="userinfo-nickname" style="color:white;font-size: 25rpx;">查看并编辑个人资料</text>
    </view>
    <view style="margin-left:auto;margin-right:10px;">
      <button open-type="share" type='primary' style='padding:10rpx;font-size:20rpx;'>邀请加入</button>
      <icon bindtap="showposter" class='mathoj mathojtuiguangma iconclass' style="color: black;"></icon>
    </view>
  </view>
  <view style="height:100rpx;margin-top:-50rpx;background-color:white;padding:10px;margin-left:12%;justify-content: space-around;display:flex;width:70%;border:solid 1px gray;border-radius:10px;">
    <view class="czlist" bindtap="showMyQues">
      <icon class='mathoj mathojtiwen gray35'></icon>
      <text class="text1">提问</text>
    </view>
    <view class="czlist" bindtap="showMyComm">
      <icon class='mathoj mathojjieda gray35'></icon>
      <text class="text1">解答</text>
    </view>
    <view class="czlist" bindtap="showMyBrow">
      <icon class='mathoj mathojliulan gray35'></icon>
      <text class="text1">浏览</text>
    </view>
    <view class="czlist" bindtap="showMySubs">
      <icon class='mathoj mathojshoucang gray35'></icon>
      <text class="text1">收藏</text>
    </view>
  </view>
  <view class="list-container">
    <view wx:if="{{role!='校长'}}">
      <view class="list-item" bindtap="showMyapply">
        <text class="list-name">我的申请</text>
        <icon class='mathoj mathojxiala1-copy iconclass rightarrow'></icon>
      </view>
      <view class="list-item" bindtap="showConfig">
        <text class="list-name">设置</text>
        <icon class='mathoj mathojxiala1-copy iconclass rightarrow'></icon>
      </view>
    </view>
    <view wx:else>
      <view class="list-item" bindtap="showAllApplys">
        <text class="list-name">处理申请</text>
        <icon class='mathoj mathojxiala1-copy iconclass rightarrow'></icon>
      </view>
      <view class="list-item" bindtap="showMyStudents">
        <text class="list-name">我的学生们</text>
        <icon class='mathoj mathojxiala1-copy iconclass rightarrow'></icon>
      </view>
      <view class="list-item" bindtap="showMyTeachers">
        <text class="list-name">我的老师们</text>
        <icon class='mathoj mathojxiala1-copy iconclass rightarrow'></icon>
      </view>
      <view class="list-item" bindtap="showSchoolConfig">
        <text class="list-name">设置学校</text>
        <icon class='mathoj mathojxiala1-copy iconclass rightarrow'></icon>
      </view>
    </view>
  </view>
  <view class="weui-footer">
    <view class="weui-footer__links" style='padding:10px 0;'>
      <view bindtap="clearcache" class="weui-footer__link">清除缓存</view>
      <view bindtap="showHelp" class="weui-footer__link">软件说明</view>
      <view class="weui-footer__link">
        <form report-submit='true' bindsubmit='pushformid'>
          <button form-type='submit' plain='true' style='padding:0;border:none'>
            <icon class='mathoj mathojshengyuduanxin' style='font-size:60rpx;color:lightgray'></icon>
            <text style='position:absolute;font-size:30rpx;bottom:20rpx;right:12rpx;left:12rpx;color:black'>
              {{remainformidnumorstr}}
            </text>
          </button>
        </form>
      </view>
      <view bindtap="showFeedback" class="weui-footer__link">用户反馈</view>
      <view bindtap="toface" class="weui-footer__link">小游戏</view>
    </view>
  </view>
</view>