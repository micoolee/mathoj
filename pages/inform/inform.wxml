<view class='container'>
  <view wx:if="{{informlist.length>0}}" style="width: 100%;">
    <view class="spcenter">
      <iconfont wx:if="{{multichose}}" bindtap="hidemultichose" name="mathojcancel" size="30" />
      <iconfont wx:if="{{multichose}}" name="mathojduoxuanshanchu" color="red" size="30" bindtap="deletechosed" />
      <iconfont wx:else name="mathojduoxuanshanchu" size="30" bindtap="showmultichose" />
      <iconfont wx:if="{{multichose}}" bindtap="choseall" name="mathojquanxuan" size="30" />
    </view>
    <scroll-view style="margin: 20rpx 0;" wx:for="{{informlist}}" wx:key="{{item.messageid}}" wx:for-index="index" wx:for-item="item" data-idx="{{index}}">
      <view class="splist">
        <view>
          <image style="width:100rpx;height:100rpx;padding:5px;" src="{{item.senderavatar}}" catchtap='showmore' data-avatar='{{item.senderavatar}}' data-userid='{{item.askid}}' data-sourcerid='{{item.sourcerid}}' data-username='{{item.sendernickname}}' data-openid='{{item.senderopenid}}'></image>
        </view>
        <view bindtap='showinformdetail' bindtouchstart='bindTouchStart' bindtouchend='bindTouchEnd' bindlongtap='bindLongTap' data-informid='{{item.messageid}}' data-problemid='{{item.problemid}}' data-informtype='{{item.messagetype}}' data-sourcerid='{{item.sourcerid}}' data-readed='{{item.readed}}' data-index='{{index}}' data-avatar='{{item.senderavatar}}' data-openid='{{item.senderopenid}}' data-username='{{item.sendernickname}}' style="border-bottom:solid 1px gray;width:100%;">
          <view class="pingjun" style="align-items: center;">
            <view style="display: flex;align-items: center;">
              <text style='font-size: 30rpx;'>{{item.sendtime}}</text>
              <iconfont wx:if="{{item.readed=='0'}}" name="mathojweidu" size="30" />
            </view>
            <view style="margin-right: 10rpx;">
              <iconfont name="{{icons[item.messagetype]}}" size="25" />
            </view>
          </view>
          <view class="spcenter" style="font-size:25rpx;" qid="{{question_id}}">
            <text class='line-3'>{{item.sendernickname}}{{item.content}}</text>
          </view>
        </view>
        <checkbox-group class="czcenter" wx:if="{{multichose}}" bindchange="checkboxChange" data-index="{{index}}">
          <checkbox value="{{item.name}}" checked="{{allchecked }}" value="{{item.messageid}}" />
        </checkbox-group>
      </view>
    </scroll-view>
  </view>
  <view wx:elif="{{informlist.length==0}}" class="spcenter">
    <view style="width:80%">
      <image src="/images/no_result.png" style="width: 100%;" />
    </view>
  </view>
</view>